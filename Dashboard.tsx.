import React, { useState } from 'react';
import { PatientOrder } from './types';
import { Search, CheckCircle, Clock, ChefHat, Truck, ClipboardList, LayoutGrid, X } from 'lucide-react';

const Dashboard: React.FC<{ orders: PatientOrder[]; roomId?: string }> = ({ orders }) => {
  const [selected, setSelected] = useState<PatientOrder | null>(null);
  const stats = {
    total: orders.length,
    pending: orders.filter(o => o.status === 'ordered').length,
    done: orders.filter(o => o.status === 'delivered').length
  };

  return (
    <div className="space-y-6 pb-20">
      <div className="grid grid-cols-3 gap-4">
        <StatCard label="ทั้งหมด" value={stats.total} />
        <StatCard label="รอปรุง" value={stats.pending} color="text-orange-500" />
        <StatCard label="สำเร็จ" value={stats.done} color="text-emerald-500" />
      </div>
      <div className="bg-white rounded-[3rem] p-6 shadow-sm border border-slate-100">
        <h2 className="text-xl font-bold mb-6">ความคืบหน้าเรียลไทม์</h2>
        <div className="space-y-3">
          {orders.map(order => (
            <div key={order.id} onClick={() => setSelected(order)} className="p-4 bg-slate-50 rounded-2xl border border-slate-100 flex justify-between items-center cursor-pointer hover:bg-white transition-all">
              <div><div className="font-bold">{order.patientName}</div><div className="text-xs text-slate-400">HN: {order.hn} | ห้อง {order.roomNumber}</div></div>
              <span className={`px-4 py-1.5 rounded-full text-[10px] font-bold border ${order.status === 'delivered' ? 'bg-emerald-50 text-emerald-600 border-emerald-100' : 'bg-orange-50 text-orange-600 border-orange-100'}`}>
                {order.status === 'delivered' ? 'เสิร์ฟแล้ว' : 'กำลังดำเนินการ'}
              </span>
            </div>
          ))}
        </div>
      </div>
      {selected && (
        <div className="fixed inset-0 z-50 flex items-center justify-center p-6 bg-slate-900/60 backdrop-blur-md">
          <div className="bg-white rounded-[3rem] p-8 max-w-md w-full shadow-2xl relative">
            <button onClick={() => setSelected(null)} className="absolute top-6 right-6 p-2 bg-slate-50 rounded-full"><X className="w-5 h-5 text-slate-400" /></button>
            <h3 className="font-bold text-xl mb-6">{selected.patientName}</h3>
            <div className="space-y-4">
              {selected.kitchen?.photo && <div><label className="text-xs font-bold text-slate-400">รูปจากห้องครัว</label><img src={selected.kitchen.photo} className="mt-2 rounded-2xl w-full aspect-video object-cover" /></div>}
              {selected.delivery?.photo && <div><label className="text-xs font-bold text-slate-400">รูปยืนยันตอนเสิร์ฟ</label><img src={selected.delivery.photo} className="mt-2 rounded-2xl w-full aspect-video object-cover" /></div>}
            </div>
          </div>
        </div>
      )}
    </div>
  );
};

const StatCard = ({ label, value, color = "text-slate-800" }: any) => (
  <div className="bg-white p-5 rounded-[2rem] shadow-sm border border-slate-100 text-center">
    <div className="text-[10px] font-bold text-slate-400 uppercase mb-1">{label}</div>
    <div className={`text-2xl font-bold ${color}`}>{value}</div>
  </div>
);

export default Dashboard;
